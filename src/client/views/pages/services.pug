extends ../templates/base.pug
block meta
    meta(charset="UTF-8")
    meta(name="keywords", content="portfolio site services web angular react vuejs full stack web development design custom website")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="author", content="Foss")
    meta(name="description", content="stylo portfolio site with content regarding the services offered by stylo such as modern website with frameworks like react, angular , vuejs as well as some extra things as well")
    meta(name="robots" content="index,nofollow")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
block title
    | Services
block content
    - var webservices = ['Modern Website Design', 'API Design', 'Asthetic Front End Web Application', 'Secure Back End Development', 'Custom Website Design Of Any Scale', 'Website Using Modern Frameworks Like React, Angular, Vue & More']
    .services-container
        .services
            include ../components/service.pug
            +service-card("1", "Web Development", webservices, true)
            +service-card("2", "Mobile Development", [])
            +service-card("3", "Desktop Development", [])
